<% layout('layouts/boilerplate') -%>

<div id="map"></div>

<div class="blog-home2 spacer">
  <div class="container">
    <!-- Row  -->
    <div class="row justify-content-center">
      <!-- Column -->
      <div class="col-md-8 text-center">
        <h2 class="title">Recent Vinyls</h2>
        <h6 class="subtitle">Check out our latest listings</h6>
      </div>
      <!-- Column -->
    </div>
    <div class="row m-t-40">
      <% recentVinyls.forEach(vinyl => { %>
      <!-- Column -->
      <div class="col-md-4">
        <div class="card" data-aos="flip-left" data-aos-duration="1200">
          <a href="/vinyls/<%= vinyl.id %>"><img class="card-img-top" src="<%= vinyl.images[0].url %>" alt="wrappixel kit"></a>

          <div class="date-pos bg-info-gradiant">
            <%= moment(vinyl._id).format('MMM') %><span><%= moment(vinyl._id).format('D') %></span></div>
          <h5 class="font-medium my-3"><a href="/vinyls/<%= vinyl.id %>" class="link"><%= vinyl.title %></a></h5>
          <p class="my-1"><%= vinyl.location %></p>
          <a href="/vinyls/<%= vinyl.id %>" class="linking text-themecolor my-1">Learn More <i
              class="ti-arrow-right"></i></a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<script>
  mapboxgl.accessToken = "<%= mapBoxToken %>";
  var vinyls = { features: <%- JSON.stringify(vinyls) %> };
</script>
<script src="/javascripts/allVinylsClusterMap.js"></script>